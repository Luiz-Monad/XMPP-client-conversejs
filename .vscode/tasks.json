    "version": "2.0.0",
    "tasks": [
        {
            "label": "xmpp backend",
            "type": "shell",
            "command": "npm run backend",
            "runOptions": {
                "instanceLimit": 2
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "label": "node frontend",
            "type": "shell",
            "command": "npm run frontend",
            "runOptions": {
                "reevaluateOnRerun": true,
                "instanceLimit": 2
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "label": "webpack devserver",
            "type": "shell",
            "command": "npm run devserver",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": false
            }
        },
    ]
}